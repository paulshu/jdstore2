<table class="table table-boldered">
  <thead>
    <tr>
      <td>序号</td>
      <td>品名</td>
      <td width="280">描述</td>
      <td>库存</td>
      <td>价格</td>
      <td>选项</td>
      <td>创建日期</td>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= link_to(product.title, admin_product_path(product)) %></td>
        <td><%= product.description %></td>
        <td><%= product.quantity %></td>
        <td><%= product.price %></td>
        <td>
            <%= link_to("Edit", edit_admin_product_path(product)) %>
            <%= link_to("Destroy", admin_product_path(product), method: :delete,data: { confirm: "Are your sure?" }) %>
        </td>
        <td><%= product.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
